{% extends 'base.html.twig' %}

{% block title %}Passager index{% endblock %}

{% block body %}
    <h1>Passager index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Adresse</th>
                <th>Telephone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for passager in passagers %}
            <tr>
                <td>{{ passager.id }}</td>
                <td>{{ passager.nom }}</td>
                <td>{{ passager.prenom }}</td>
                <td>{{ passager.adresse }}</td>
                <td>{{ passager.telephone }}</td>
                <td>
                    <a href="{{ path('passager_show', {'id': passager.id}) }}">show</a>
                    <a href="{{ path('passager_edit', {'id': passager.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('passager_new') }}">Create new</a>
{% endblock %}
