{% extends 'base.html.twig' %}

{% block title %}Train index{% endblock %}

{% block body %}
    <h1>Train index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero_train</th>
                <th>Heure_depart</th>
                <th>Heure_arrivee</th>
                <th>Date_depart</th>
                <th>Date_arrivee</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for train in trains %}
            <tr>
                <td>{{ train.id }}</td>
                <td>{{ train.numeroTrain }}</td>
                <td>{{ train.heureDepart ? train.heureDepart|date('H:i:s') : '' }}</td>
                <td>{{ train.heureArrivee ? train.heureArrivee|date('H:i:s') : '' }}</td>
                <td>{{ train.dateDepart ? train.dateDepart|date('Y-m-d') : '' }}</td>
                <td>{{ train.dateArrivee ? train.dateArrivee|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('train_show', {'id': train.id}) }}">show</a>
                    <a href="{{ path('train_edit', {'id': train.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('train_new') }}">Create new</a>
{% endblock %}
