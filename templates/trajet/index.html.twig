{% extends 'base.html.twig' %}

{% block title %}Trajet index{% endblock %}

{% block body %}
    <h1>Trajet index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lieu_depart</th>
                <th>Lieu_arrive</th>
                <th>Date_depart</th>
                <th>Date_arrivee</th>
                <th>Heure_depart</th>
                <th>Heure_arrivee</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for trajet in trajets %}
            <tr>
                <td>{{ trajet.id }}</td>
                <td>{{ trajet.lieuDepart }}</td>
                <td>{{ trajet.lieuArrive }}</td>
                <td>{{ trajet.dateDepart ? trajet.dateDepart|date('Y-m-d') : '' }}</td>
                <td>{{ trajet.dateArrivee ? trajet.dateArrivee|date('Y-m-d') : '' }}</td>
                <td>{{ trajet.heureDepart ? trajet.heureDepart|date('H:i:s') : '' }}</td>
                <td>{{ trajet.heureArrivee ? trajet.heureArrivee|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('trajet_show', {'id': trajet.id}) }}">show</a>
                    <a href="{{ path('trajet_edit', {'id': trajet.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('trajet_new') }}">Create new</a>
{% endblock %}
